<div
  style="display: flex; flex-direction:column; justify-content:center; align-items:center"
>
  <h2>Signup</h2>
  <form
    style="display: flex; flex-direction:column; justify-content:center; align-items:center"
    action="/auth/signup"
    method="POST"
  >
    <div>
      <label>Email</label><br />
      <input
        class="txtinput"
        type="text"
        name="email"
        placeholder="john.doe@gmail.com"
      />

    </div>
    <div>
      <label>Username</label><br />
      <input
        class="txtinput"
        type="text"
        name="username"
        placeholder="ironhacker"
      />

    </div>
    <div>
      <label>
        Password</label><br />
      <input
        class="txtinput"
        type="password"
        name="password"
        placeholder="********"
      />

    </div>
    <br />
    <button class="submitbuttons" type="submit">Create account</button>
  </form>
  {{#if errorMessage}}
    <div class="validationErrors"><p class="error">{{errorMessage}}</p></div>
  {{/if}}
  
</div>