<div
  style="display: flex; flex-direction:column; justify-content:center; align-items:center"
>
  <h2>login</h2>
  <form
    style="display: flex; flex-direction:column; justify-content:center; align-items:center"
    action="/auth/login"
    method="POST"
  >
    <div>
      <label>Username</label><br />
      <input
        class="txtinput"
        type="text"
        name="username"
        placeholder="ironhacker"
      />

    </div>
    <div>
      <label>
        Password</label><br />
      <input
        class="txtinput"
        type="password"
        name="password"
        placeholder="********"
      />

    </div>
    <br />
    <div><button class="submitbuttons" type="submit">Log In</button></div>
  </form>
  {{#if errorMessage}}
    <div class="validationErrors"><p class="error">{{errorMessage}}</p></div>
  {{/if}}
</div>